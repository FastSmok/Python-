[MASTER]
# Игнорируемые директории и файлы
ignore =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    dist,
    build,
    migrations,
    docs,
    tests/*  # Игнорировать проверку в тестах (если нужно)

# Отключенные проверки
disable =
    missing-docstring,  # Отключить проверку на отсутствие docstring
    invalid-name,       # Отключить проверку на невалидные имена
    too-few-public-methods,  # Отключить проверку на малое количество публичных методов
    protected-access,   # Отключить проверку на доступ к защищенным членам
    duplicate-code,     # Отключить проверку на дублирование кода
    too-many-arguments, # Отключить проверку на слишком много аргументов в функции
    too-many-locals,    # Отключить проверку на слишком много локальных переменных
    too-many-branches,  # Отключить проверку на слишком много ветвей в функции
    too-many-statements, # Отключить проверку на слишком много операторов в функции
    too-many-instance-attributes, # Отключить проверку на слишком много атрибутов в классе
    import-error        # Отключить проверку на ошибки импорта

[MESSAGES CONTROL]
# Максимальная длина строки
max-line-length = 88

# Включить или отключить определенные сообщения
enable =
    unused-import,      # Включить проверку на неиспользуемые импорты
    unused-variable,    # Включить проверку на неиспользуемые переменные
    unused-argument,    # Включить проверку на неиспользуемые аргументы
    redefined-builtin,  # Включить проверку на переопределение встроенных имен
    bad-continuation,   # Включить проверку на неправильное продолжение строки
    inconsistent-return-statements, # Включить проверку на несогласованные возвраты
    consider-using-f-string, # Включить проверку на использование f-строк
    consider-using-with, # Включить проверку на использование with для управления ресурсами

[FORMAT]
# Максимальное количество строк в модуле
max-module-lines = 1000

# Максимальное количество символов в строке
max-line-length = 88

[TYPECHECK]
# Включить проверку типов
enable = 
    consider-using-alias, # Включить проверку на использование алиасов для типов
    unidiomatic-typecheck, # Включить проверку на идиоматическую проверку типов

[DESIGN]
# Максимальная сложность кода (по McCabe)
max-complexity = 10

# Максимальное количество аргументов в функции
max-args = 5

# Максимальное количество атрибутов в классе
max-attributes = 7

# Максимальное количество публичных методов в классе
max-public-methods = 20

[VARIABLES]
# Имена переменных, которые не будут проверяться
good-names =
    i, j, k,  # Односимвольные имена для итераторов
    _,         # Игнорируемые переменные
    df,        # Имя для DataFrame (например, в pandas)
    ex,        # Имя для исключения
    logger     # Имя для логгера

[IMPORTS]
# Игнорировать ошибки импорта для определенных модулей
ignored-modules =
    pandas,    # Игнорировать ошибки импорта для pandas
    numpy,     # Игнорировать ошибки импорта для numpy
    matplotlib # Игнорировать ошибки импорта для matplotlib

[CLASSES]
# Имена классов, которые не будут проверяться
good-names =
    TestCase,  # Игнорировать проверку для классов тестов
    BaseTest   # Игнорировать проверку для базовых классов тестов

[EXCEPTIONS]
# Исключения, которые не будут проверяться
overgeneral-exceptions =
    Exception,  # Игнорировать проверку на слишком общие исключения
    BaseException
